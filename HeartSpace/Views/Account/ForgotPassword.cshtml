@model HeartSpace.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "忘記密碼";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card p-4 shadow" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <div class="text-center mb-4">
            <div style="background-color: #d7ceb2; padding: 20px; border-radius: 10px;">
                <h1 class="mb-0">心聚點</h1>
                <h2 class="fs-5">HeartSpace</h2>
            </div>
        </div>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                <label for="Email" class="form-label">E-mail</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">取得信件</button>
            </div>
            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Account")">返回登入頁</a>
            </div>
        }
    </div>
</div>
