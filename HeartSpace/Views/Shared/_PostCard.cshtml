@model HeartSpace.Models.PostCard

<a href="@Url.Action("PostDetails", "Post", new { id = Model.Id })" style="text-decoration: none; color: inherit;">
    <div class="card" style="width: 320px; border: 1px solid #ddd; border-radius: 10px; font-family: Arial, sans-serif; height: 400px; overflow: hidden; display: flex; flex-direction: column; justify-content: space-between; margin: 10px auto;">
        <!-- 貼文圖片 -->
        @if (!string.IsNullOrEmpty(Model.PostImg))
        {
            <div style="width: 100%; height: 180px; overflow: hidden; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                <img src="@Model.PostImg" alt="貼文圖片" style="width: 100%; height: 100%; object-fit: cover;" />
            </div>
        }
        else
        {
            <div style="width: 100%; height: 180px; display: flex; justify-content: center; align-items: center; background-color: #f0f0f0; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                無圖片
            </div>
        }

        <!-- 卡片內容 -->
        <div class="card-body" style="padding: 15px;">
            <!-- 貼文標題 -->
            <h5 class="card-title" style="font-weight: bold; font-size: 1.1rem; margin-bottom: 10px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Model.Title</h5>

            <!-- 發布時間 -->
            <p class="card-text text-muted" style="font-size: 0.85rem; margin-bottom: 5px;">
                發布時間：@Model.PublishTime.ToString("yyyy/MM/dd HH:mm")
            </p>

            <!-- 分類 -->
            <p class="card-text text-muted" style="font-size: 0.85rem; margin-bottom: 10px;">
                分類：@Model.CategoryName
            </p>

            <!-- 發文者 -->
            <div class="d-flex align-items-center mb-3">
                @if (!string.IsNullOrEmpty(Model.MemberImg))
                {
                    <img src="@Model.MemberImg" alt="會員圖片" style="width: 30px; height: 30px; border-radius: 50%; object-fit: cover; margin-right: 10px;" />
                }
                else
                {
                    <div style="width: 30px; height: 30px; display: flex; justify-content: center; align-items: center; background-color: #ddd; border-radius: 50%; margin-right: 10px;">
                        無
                    </div>
                }
                <span style="font-size: 0.9rem; color: #555;">@Model.MemberNickName</span>
            </div>

            <!-- 貼文內容 -->
            <p class="card-text" style="font-size: 0.95rem; color: #333; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                @Model.PostContent
            </p>
        </div>
    </div>
</a>
