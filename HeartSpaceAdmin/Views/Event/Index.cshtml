@model IEnumerable<HeartSpaceAdmin.Models.EventViewModel>

<br />
<h1>揪團管理</h1>


<table class="table">
    <thead>
        <tr>
            <th style="width: 10%;">ID</th>
            <th style="width: 20%;">標題</th>
            <th style="width: 10%;">發起人</th>            
            <th style="width: 25%;">活動時間</th>
            <th style="width: 10%;">報名截止</th>         
            <th style="width: 25%;">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.EventName</td>
                <td>@item.OrganizerName</td>
                <td>@item.EventTime</td>
                <td>@item.DeadLine</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">管理</a>
                    <form asp-action="ToggleDelete" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn @(item.Disabled ? "btn-success" : "btn-danger")">
                            @(item.Disabled ? "復原" : "刪除")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

