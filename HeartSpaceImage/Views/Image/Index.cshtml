
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet"> <!-- 引入 Font Awesome -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .image-section {
            margin-bottom: 30px;
        }

        .image-title {
            display: flex;
            align-items: center;
            font-size: 1.8rem;
            font-weight: bold;
            color: #494949; /* 僅保留文字顏色 */
            padding: 15px;
        }


            .image-title i {
                margin-right: 10px;
                
            }

        .image-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            gap: 15px;
            padding: 10px;
        }

        .image-item {
            text-align: center;
        }

            .image-item img {
                width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 10px;
                margin-bottom: 8px;
            }

            .image-item span {
                font-size: 14px;
                word-break: break-word;
                display: block;
            }
    </style>
</head>
<body>
    <h1 class="image-title">
        <i class="fa-regular fa-image"></i> 圖片清單
    </h1>

    <!-- Member 區塊 -->
    <div class="image-section">
        <h2 style="margin-left:5px;">Member Images</h2>
        <div class="image-grid">
            @foreach (var image in Model.MemberImages)
            {
                <div class="image-item">
                    <a href="@Url.Content("~/Images/" + image)" target="_blank">
                        <img src="@Url.Content("~/Images/" + image)" alt="@image" />
                    </a>
                    <span>@image</span>
                </div>
            }
        </div>
    </div>

    <!-- Event 區塊 -->
    <div class="image-section">
        <h2 style="margin-left:5px;">Event Images</h2>
        <div class="image-grid">
            @foreach (var image in Model.EventImages)
            {
                <div class="image-item">
                    <a href="@Url.Content("~/Images/" + image)" target="_blank">
                        <img src="@Url.Content("~/Images/" + image)" alt="@image" />
                    </a>
                    <span>@image</span>
                </div>
            }
        </div>
    </div>

    <!-- Post 區塊 -->
    <div class="image-section">
        <h2 style="margin-left:5px;">Post Images</h2>
        <div class="image-grid">
            @foreach (var image in Model.PostImages)
            {
                <div class="image-item">
                    <a href="@Url.Content("~/Images/" + image)" target="_blank">
                        <img src="@Url.Content("~/Images/" + image)" alt="@image" />
                    </a>
                    <span>@image</span>
                </div>
            }
        </div>
    </div>
</body>
</html>
